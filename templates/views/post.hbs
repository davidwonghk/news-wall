<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">

			<article>
				<header>
					<h1>{{{data.post.title}}}</h1>
					<h5>
						{{{categoryList data.post.categories head="#" separator="&nbsp;&nbsp; "}}}
					</h5>
				</header>
				<hr>
				<div class="post">
					{{#if data.post.image}}<img src="{{{cloudinaryUrl data.post.image crop='fit' }}}" class="img-responsive" />{{/if}}
					<div class="fb-like"
						data-href="{{data.post.url}}"
						data-layout="standard"
						data-action="like"
						data-size="large"
						{{!--data-share="true"--}}
						data-show-faces="true">
					</div>
					<hr>
					{{{data.post.Content}}}
				</div>
			</article>
			<hr>

			<div>
					<a class="btn btn-social btn-twitter" href="https://twitter.com/intent/tweet?text={{data.post.title}}&url={{data.post.url}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
						<span class="fa fa-twitter"></span> Twitter
					</a>
					<a class="btn btn-social btn-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{data.post.url}}" onclick="FB.ui({ method: 'share', display: 'popup', href: '{{data.post.url}}', }, function(response){});return false">
						<span class="fa fa-facebook"></span> Facebook
					</a>
					<a class="btn btn-social btn-google" href="https://plus.google.com/share?url={{data.post.url}}" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
						<span class="fa fa-google"></span> GooglePlus
					</a>
			</div>

		</div>
	</div>
</div>

<div class="overlay">

</div>
