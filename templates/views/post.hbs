<link href="/styles/font-awesome.css" rel="stylesheet">
<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">

			<article>
				<header>
					<h1>{{{data.title}}}</h1>

					{{#if data.post.from}}
					<div class="post-from">
							<span class="author">{{data.post.from.author}}</span> 分享於 <a href="{{data.post.from.url}}">{{data.post.from.site}}</a>
					</div>
					{{/if}}
				</header>

				<div class="post">
					<div class="share">
					<div class="fb-like"
						data-href="{{data.post.url}}"
						data-layout="standard"
						data-action="like"
						data-size="large"
						{{!--data-share="true"--}}
						data-show-faces="true">
					</div>
					{{> share}}
					</div>

					<hr>
					<div class='tags'>
						{{#each data.post.categories}}
						<a href="{{ categoryUrl key }}">#{{ name }} </a>
						{{/each}}
					</div>

						{{{data.html}}}
					<hr>
					<div class="share">
						{{> share}}
					</div>

				</div>
			</article>

		</div>
	</div>
</div>

<div class="overlay">

</div>
